{
  "compilerOptions": {
    "target": "es5",                       
    "module": "commonjs",                   
    "strict": true,                          
    "esModuleInterop": true,                 
    "skipLibCheck": true,                    
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",                      
    "rootDir": "./src"                       
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
