{
	"compilerOptions": {
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES6",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"rootDir": "src",
		"strictNullChecks": true,
		"lib": ["DOM", "ES5", "ES6", "ES7"],
		"declaration": true,
		"declarationMap": true,
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}